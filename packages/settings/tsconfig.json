{
    "compilerOptions": {
        "target": "es2018",
        "module": "CommonJS",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",

        "declaration": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist/cjs",
        "paths": {
            "@framework/settings/*": ["src/*"]
        },
        "composite": true
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
